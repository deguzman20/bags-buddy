%h2 Change your password
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.hidden_field :reset_password_token
  .field
    = f.label :password, "New password"
    %br/
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
      %br/
    = f.password_field :password, autofocus: true, autocomplete: "new-password"
  .field
    = f.label :password_confirmation, "Confirm new password"
    %br/
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit "Change my password"
.container
  %br/
  %br/
  %br/
  %br/
  %br/
  .row
    .col-lg-3.col-md-3
    .col-lg-6.col-md-6
      .card
        %h5.card-header.elegant-color.white-text.text-center.py-4
          %strong Change your password
        / Card content
        .card-body.px-lg-5.pt-0
          %br/
          = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
            = render "devise/shared/error_messages", resource: resource  
            = f.hidden_field :reset_password_token
            .md-form.mt-0
              %input#materialRegisterFormPassword.form-control{:name => "user[password]", :type => "password"}/
              %label{:for => "materialRegisterFormPassword"} Password
            .md-form.mt-0
              %input#materialRegisterFormConfirmPassword.form-control{:name => "user[password_confirmation]", :type => "password"}/
              %label{:for => "materialRegisterFormConfirmPassword"} Confirm Password  
            - if @minimum_password_length 
              %em
                (#{@minimum_password_length} characters minimum)
              %br/
            / Sign up button
            = f.submit "Change my password", class: ".btn.btn-success.btn-rounded.btn-block.my-4.waves-effect.z-depth-0"
            -# %button.btn.btn-success.btn-rounded.btn-block.my-4.waves-effect.z-depth-0{:name => "commit", :type => "submit"} Change my password
    .col-lg-3.col-md-3
  %br/
  %br/    
= render "devise/shared/links"
