  .row
    .col-lg-3.col-md-3
    .col-lg-6.col-md-6
      .card
        %h5.card-header.elegant-color.white-text.text-center.py-4
          %strong Forgot your password?
        / Card content
        .card-body.px-lg-5.pt-0
          %br/
          = form_for(resource, as: resource_name, |
            url: password_path(resource_name),    |
            html: { method: :post }) do |f|       |
            .md-form.mt-0
              %input#materialRegisterFormEmail.form-control{:name => "user[email]", :type => "email"}/
              %label{:for => "materialRegisterFormEmail"} E-mail
            / Sign up button
            %button.btn.btn-success.btn-rounded.btn-block.my-4.waves-effect.z-depth-0{:name => "commit", :type => "su]bmit"} Submit
