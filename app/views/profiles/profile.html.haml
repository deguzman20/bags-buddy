= render 'devise/shared/page_directory', current_location: 'Profile'
.container
  %br/
  .row
    .col-lg-3.col-md-3
    .col-lg-6.col-md-6
      
      / Material form register
      .card
        %h5.card-header.elegant-color.white-text.text-center.py-4
          %strong Profile
        / Card content
        .card-body.px-lg-5.pt-0
          / Form
          = form_with scope: :profile_form, url: profile_path, method: :put, local: true, class: 'text-center' do |f|
            %br/
            .form-row
              .col
                / First name
                .md-form
                  = f.text_field :first_name, id: "materialProfileFirstName", class: "form-control"
                  = f.label :first_name,
                    for: "materialProfileFirstName"
              .col
                / Last name|

                .md-form
                  = f.text_field :last_name, id: "materialProfileLastName", class: "form-control"
                  = f.label :last_name,
                    for: "materialProfileLastName"
            / E-mail
            .md-form.mt-0
              = f.email_field :email, id: "materialProfileEmail", class: "form-control"
              = f.label :email,
                for: "materialProfileEmail"
            .row
              .col-lg-12.col-md-12
                - if flash[:success].present?
                  .alert.alert-success
                    %center
                      = flash[:success]
              .col-lg-12.col-md-12
                = f.submit "Update", class: 'btn btn-block btn-rounded waves-effect z-depth-0 btn-black'
    .col-lg-3.col-md-3
  %br/
